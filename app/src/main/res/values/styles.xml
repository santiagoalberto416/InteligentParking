<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="title_administrator" parent="general_font_style">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@color/headerBackground</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="text_header_list_delay" parent="general_font_style">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="text_item_list_delay" parent="general_font_style">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="empty_state" parent="general_font_style">
        <item name="android:textColor">#000</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="general_font_style">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

</resources>
