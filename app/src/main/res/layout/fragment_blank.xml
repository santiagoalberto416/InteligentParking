<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.macbook.smartparking.maps.MapActivityMain"
    android:background="@android:color/white">

    <!-- TODO: Update blank fragment layout -->
    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/instructionsButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:src="@drawable/ic_help_outline_black_24dp"
        android:tint="@android:color/white"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        app:layout_anchorGravity="bottom|right|end" />

    <RelativeLayout
        android:id="@+id/confirmation"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black">

        <TextView
            android:background="@android:color/white"
            android:layout_centerInParent="true"
            android:layout_margin="16dp"
            android:padding="16dp"
            android:text="@string/confirmation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="4dp"/>

    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/background">


        <LinearLayout
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <RelativeLayout
                android:background="@drawable/shape_bubble"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_margin="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:id="@+id/textSpot"
                    android:text="Has Seleccionado este espacio es correcto?"/>

                <LinearLayout
                    android:layout_below="@id/textSpot"
                    android:id="@+id/buttonContainer"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/accept_action"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Aceptar"/>

                    <Button
                        android:id="@+id/cancel_action"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Cancelar"/>

                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>


</FrameLayout>
